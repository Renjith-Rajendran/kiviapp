<androidx.preference.PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <PreferenceCategory
        android:title="Basic Settings">
        <SwitchPreferenceCompat
            app:key="notifications"
            app:title="Enable message notifications"/>

        <SeekBarPreference
            android:key="searchradius"
            android:title="Search Radius"
            android:summary="KiVi Search Radius.Default is now set to 100 miles"
            android:max="110"
            android:defaultValue="100"/>
    </PreferenceCategory>

    <PreferenceCategory
        android:title="Support">
        <Preference
            app:key="feedback"
            app:title="Send feedback"
            app:summary="Report technical issues or suggest new features"/>
    </PreferenceCategory>
</androidx.preference.PreferenceScreen>

    <!--https://developer.android.com/reference/androidx/preference/PreferenceFragmentCompat#oncreatepreferences-->