<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout_tutorial_3"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="@color/md_grey_200"
    tools:context="kivi.ugran.com.launcher.TutorialActivity"
    >

    <ImageView
        android:id="@+id/kivi_help_3_image"
        android:layout_height="300dp"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_width="match_parent"
        android:src="@drawable/help03_1x"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintTop_creator="1"
        />

    <TextView
        android:id="@+id/kivi_title_text"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="@string/kivi_tutorial_page_3_title"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/appbar_padding_top"
        android:layout_marginBottom="@dimen/appbar_padding_top"
        app:layout_constraintTop_toBottomOf="@+id/kivi_help_3_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id="@+id/kivi_instruction_1_text"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="@string/kivi_tutorial_page_3_instruction_1"
        android:textAlignment="textStart"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:layout_marginTop="@dimen/appbar_padding_top"
        android:layout_marginBottom="@dimen/appbar_padding_top"
        app:layout_constraintTop_toBottomOf="@+id/kivi_title_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>